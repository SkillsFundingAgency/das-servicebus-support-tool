@model QueueViewModel
@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
{
    @Html.AntiForgeryToken()
}

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.18.0/bootstrap-table.min.js"></script>

    <script type="text/javascript">

        function sendRequest(url, data) {
            displayBusyIndicator();

            var form = $('#__AjaxAntiForgeryForm');
            var token = $('input[name="__RequestVerificationToken"]', form).val();

            return $.ajax({
                type: "POST",
                url: url,
                dataType: 'json',
                data: {
                    '__RequestVerificationToken': token,
                    "data": JSON.stringify(data)
                },
                failure: function (response) {
                    console.log(response.responseText);
                },
                error: function (response) {
                    console.log(response.responseText);
                }
            })

        }

        function operateFormatter(value, row, index) {
            return '<a class="detail" href="#" onclick="displayBusyIndicator();getMessages(\'' + row.id + '\')" title ="Retrieve messages from ServiceBus queue, this will give you sole possession">Retrieve messages</a>';
        };

        function getMessages(queue) {
            var data = {
                "queue": queue, "qty": $("#getQty")[0].value
            }

            sendRequest($('#receiveUrl').val(), data).then(function () {
                window.location.href = $('#messageListUrl').val();
            });

        }


        function queryParams(params) {
            params.filterEmptyQueues = $('#toggleHideEmptyQueues').is(":checked");
            return params
        }

        function refreshBootstrapTable() {
            $('#toggleHideEmptyQueues').attr('disabled', true);
            $('#queueTable').bootstrapTable('refresh');
        }

        $(function () {
            $('#queueTable').on('load-success.bs.table', function () {
                $('#toggleHideEmptyQueues').attr('disabled', false);
            });
        })

    </script>
}

@section Styles
{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.18.0/bootstrap-table.min.css" />
}

<div>
    <input id="receiveUrl" type="hidden" value="@(Url.Action("ReceiveMessages", "MessageList"))" />
    <input id="messageListUrl" type="hidden" value="@(Url.Action("Index", "MessageList"))" />

    <h1 class="govuk-heading-xl">Message queues</h1>

    <label for="getQty">Get qty</label>
    <select name="getQty" id="getQty">
        <option value="250">250</option>
        <option value="500">500</option>
        <option value="1000">1000</option>
    </select>
    <fieldset>
        <div class="custom-control custom-switch float-right">
            <input type="checkbox" checked class="custom-control-input" id="toggleHideEmptyQueues" onchange="refreshBootstrapTable()">
            <label class="custom-control-label" for="toggleHideEmptyQueues">Hide empty queues.</label>
        </div>
    </fieldset>
    <table id="queueTable"
           class="govuk-table"
           data-toggle="table"
           data-pagination="true"
           data-search="true"
           data-click-to-select="true"
           data-sortable="true"
           data-url="@Url.Action("Index", "Queues")"
           data-query-params="queryParams"
           style="table-layout: fixed">
        <thead class="govuk-table__head">
            <tr class="govuk-table__row">
                <th scope="col"
                    class="col-wrap"
                    data-field="id"
                    data-visible="false">
                </th>
                <th scope="col"
                    class="col-wrap"
                    data-sortable="true"
                    data-field="name"
                    data-width="40"
                    data-width-unit="%">
                    Queue
                </th>
                <th scope="col"
                    class="col-wrap"
                    data-sortable="true"
                    data-field="messageCount"
                    data-width="20"
                    data-width-unit="%">
                    Message count
                </th>
                <th scope="col"
                    class="col-wrap"
                    data-sortable="true"
                    data-field="messageCountInvestigation"
                    data-width="20"
                    data-width-unit="%">
                    Under investigation
                </th>
                <th scope="col"
                    class="col-wrap"
                    data-sortable="false"
                    data-width="20"
                    data-width-unit="%"
                    data-formatter="operateFormatter">
                    Actions
                </th>
            </tr>
        </thead>
    </table>

</div>
